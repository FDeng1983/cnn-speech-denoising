layers {
  name: "data"
  type: HDF5_DATA
  top: "data"
  top: "label"
  hdf5_data_param {
    source: "project/cnn-speech-denoising/dataset/mfcc/clean/sampled/filelist.txt"
    batch_size: 50
  }
  # include: { phase: TRAIN }
}

